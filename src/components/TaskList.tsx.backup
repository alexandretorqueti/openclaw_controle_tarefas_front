                  style={{
                    width: '100%',
                    padding: '10px',
                    border: '1px solid #ddd',
                    borderRadius: '6px',
                    fontSize: '14px',
                    backgroundColor: '#fff'
                  }}
                >
                  <option value="">Selecione um modelo</option>
                  {models.length > 0 ? (
                    models.map((model, index) => (
                      <option key={index} value={model}>
                        {model}
                      </option>
